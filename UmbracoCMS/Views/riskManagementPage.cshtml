@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model.Value("pageTitle");

  var sidebarImage = Model.Value<IPublishedContent>("sidebarImage")?.Url() ?? "";
  var image1 = Model.Value<IPublishedContent>("image1")?.Url() ?? "";
  var image2 = Model.Value<IPublishedContent>("image2")?.Url() ?? "";

  var contactInfoImage = Model.Value<IPublishedContent>("contactInfoImage")?.Url() ?? "";
  var contactInfoBackground = Model.Value<IPublishedContent>("contactInfoBackground")?.Url() ?? "";
}

  <main>
    <section class="atf">
    <img src="./images/earth-down.png" class="earth-down"></img>
    <img src="./images/earth-up.png" class="earth-up"></img>

    <div class="atf-content">
      <h1>@Model.Value("atfHeading")</h1>
      <nav class="breadcrumb-nav">
        <a href="@Model.Value("breadcrumbLink1Url")">@Model.Value("breadcrumbLink1Text")</a>
        <img src="./images/Arrow-Vector-Black.svg"></img>
        <a href="@Model.Value("breadcrumbLink2Url")">@Model.Value("breadcrumbLink2Text")</a>
      </nav>
    </div>
    
  </section>  
    
    <section id="main-content-section" class="page-section container">
      <div class="side-bar">
        <h4>@Model.Value("sidebarHeading")</h4>
        <img class="side-bar-img" src="@sidebarImage"></img>
        <p>@Model.Value("sidebarParagraph")</p>
        <form class="contact-box">
          <h4>How can we help you?</h4>
          <p>Online support 24/7, we are here to help you</p>
          <div class="input-container">
            <input type="email" placeholder="E-mail address"></input>
            <img src="./images/Icon-mail.png"></img>
          </div>
      
        </form>
      </div>
      <div class="side-content">
        <img src="@image1"></img>
        <div class="text-group">
          <h4>@Model.Value("heading1")</h4>
          <ul>
            <li>@Model.Value("keypoint1")</li>
            <li>@Model.Value("keypoint2")</li>
            <li>@Model.Value("keypoint3")</li>
          </ul>
        </div>
        <div class="text-group">
          <h4>@Model.Value("heading2")</h4>
          <p>@Model.Value("paragraph1")</p>
          <p>@Model.Value("paragraph2")</p>
          <p>@Model.Value("paragraph3")</p>

          <ul>
            <li>@Model.Value("keypoint4")</li>
            <li>@Model.Value("keypoint5")</li>      
            <li>@Model.Value("keypoint6")</li>
          </ul>

          <p>@Model.Value("paragraph4")</p>
          <p>@Model.Value("paragraph5")</p>
        </div>

        <img src="./images/side-content-image-2.png"></img>
        <div class="text-group">
          <h4>@Model.Value("heading3")</h4>
          <p>@Model.Value("paragraph7")</p>
          <ul>
            <li>@Model.Value("keypoint7")</li>
            <li>@Model.Value("keypoint8")</li>
            <li>@Model.Value("keypoint9")</li>
            <li>@Model.Value("keypoint10")</li>
          </ul>
        </div>
        
      </div>
    </section>

    <section id="contact-form-section" class="container page-section">
      <h4>Have a question?</h4>
      <form>
        <div class="input-group">
          <input type="text" placeholder="Name"></input>
          <input type="email" placeholder="Email"></input>
        </div>
        <textarea placeholder="Question"></textarea>
        <button class="btn-green" type="submit">Submit</button>
      </form>
    </section>
    <section id="contact-details-section">
      <div class="container">
        <div class="img-container">
          <img class="img-vector" src="@contactInfoBackground"></img>
          <img class="img-person" src="@contactInfoImage"></img>
        </div>
        <div class="section-body">
          <h2>@Model.Value("contactInfoHeading")</h2>
          <div class="element-group">
            <img src="./images/Icon address.png"></img>
            <div class="text-group">
              <strong>@Model.Value("contactInfoAddressHeading")</strong>
              <p>@Model.Value("contactInfoAddress")</p>
            </div>
          </div>
          <div class="element-group">
            <img src="./images/Icon phone.png"></img>
            <div class="text-group">
              <strong>@Model.Value("contactInfoPhoneHeading")</strong>
              <p>@Model.Value("contactInfoPhone")</p>
            </div>
          </div>
          <div class="element-group">
            <img src="./images/Icon email.png"></img>
            <div class="text-group">
              <strong>@Model.Value("contactInfoEmailHeading")</strong>
              <p>@Model.Value("contactInfoEmail")</p>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

	<style>
		main {
  
  .atf {
  position: relative;
  padding: 6rem 0;
  background-color: var(--clr-gray-secondary);

  .earth-down {
    position: absolute;
    bottom: 0;
    left: 0;
  }
  .earth-up {
    position: absolute;
    top: 0;
    right: 0;
  }

  .atf-content {
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;

    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;

      > :nth-child(1) {
        color: var(--clr-text-primary);
        text-decoration: none;
        &:hover {
          text-decoration: underline;
        }
      }

      img {
        height: 10px;
      }

      > :nth-child(3) {
        color: var(--clr-beige-primary);
        text-decoration: none;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
  }
  #main-content-section {
    display: flex;
    gap: 3rem;

    .side-bar {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      height: fit-content;

      h4 {
        font-size: 18pt;
      }

      .side-bar-img {
        height: 100%;
        width: 100%;
        object-fit: cover;
      }

      .contact-box {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 1.5rem;
        background-color: var(--clr-green);
        
        h4 {
          color: var(--clr-beige-primary);
        }

        p {
          color: var(--clr-gray-secondary);
        }

        .input-container {
          position: relative;

          input {
          display: flex;
          background-color: var(--clr-bg-white);

          &:hover {
            border-color: black;
            }
          }  
          img {
              position: absolute;
              top: 10px;
              right: 15px;
              width: 30px;
              height: 30px;
              z-index: 2;
          }
        }
      }
    }

    .side-content {
      display: flex;
      flex-direction: column;
      padding-left: 3rem;
      border-left: 1px solid var(--clr-gray-secondary);

      gap: 2rem;

      .text-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        h4 {
          font-weight: 600;
        }
      }
    }
  }
  #contact-form-section {
    flex-direction: column;
    gap: 2rem;

    h4 {
      font-weight: 600;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;

      .input-group {
        display: flex;
        gap: 1.5rem;
      }
    }
  }
  #contact-details-section {
  background-color: var(--clr-gray-secondary);
  .container {
    display: flex;

    .img-container {
      position: relative;
      width: 50%;

      .img-vector {
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 1;
      }
      .img-person {
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 1;
      }
    }
    .section-body {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      padding: 11rem 0;
      padding-left: 3rem;

      .element-group {
        display: flex;
        gap: 1rem;

        img {
          max-height: 25px;
        }
        .text-group {
          display: flex;
          flex-direction: column;
          gap: 1rem;

          strong {
            display: block;
          }
          p {

          }
        }
      }
    }
  }
  }
}
	</style>