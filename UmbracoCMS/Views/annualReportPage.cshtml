@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model.Value("pageTitle");

  var sidebarImage = Model.Value<IPublishedContent>("sidebarImage")?.Url() ?? "";

  var image1 = Model.Value<IPublishedContent>("image1")?.Url() ?? "";
  var image2 = Model.Value<IPublishedContent>("image2")?.Url() ?? "";
  var image3 = Model.Value<IPublishedContent>("image3")?.Url() ?? "";

  var contactInfoImage = Model.Value<IPublishedContent>("contactInfoImage")?.Url() ?? "";
  var contactInfoBackground = Model.Value<IPublishedContent>("contactInfoBackground")?.Url() ?? "";
}

  <main>
    <section class="atf">
    <img src="./images/earth-down.png" class="earth-down"></img>
    <img src="./images/earth-up.png" class="earth-up"></img>

    <div class="atf-content">
      <h1>@Model.Value("atfHeading")</h1>
      <nav class="breadcrumb-nav">
        <a href="@Model.Value("breadcrumbLink1Url")">@Model.Value("breadcrumbLink1Text")</a>
        <img src="./images/Arrow-Vector-Black.svg"></img>
        <a href="@Model.Value("breadcrumbLink2Url")">@Model.Value("breadcrumbLink2Text")</a>
      </nav>
    </div>
    
  </section>  
    
    <section id="main-content-section" class="page-section container">
      <div class="side-content">
        <div class="date-group">
          <img src="./images/Icon-calendar.png"></img>
          <span>@Model.Value("date")</span>
        </div>
        <div class="img-group">
          <p>@Model.Value("boldParagraph")</p>
          <img src="@image1"></img>
        </div>
        <div class="text-group">
          <h4>@Model.Value("heading1")</h4>
          <ul>
            <li>@Model.Value("bulletpoint1")</li>
            <li>@Model.Value("bulletpoint2")</li>
            <li>@Model.Value("bulletpoint3")</li>
          </ul>
        </div>
        <div class="flex-group">
          <img src="@image2"></img>
          <div class="text-group">
            <h4>@Model.Value("besideImageHeading")</h4>
            <p>@Model.Value("besideImageParagraph1")</p>
            <p>@Model.Value("besideImageParagraph2")</p>
          </div>
        </div>
        <div class="text-group">
          <h4>@Model.Value("heading2")</h4>
          <p>@Model.Value("paragraph1")</p>
          <p>@Model.Value("paragraph2")</p>
          <p>@Model.Value("paragraph3")</p>
        </div>
        <img src="@image3"></img>
        <div class="text-group">
          <h4>@Model.Value("heading3")</h4>
          <p>@Model.Value("paragraph4")</p>
          <p>@Model.Value("paragraph5")</p>
        </div>
        <div class="tag-group">
          <h4>Tags:</h4>
          <div class="tags">
            <div class="tag">
              <span>@Model.Value("mainTag1")</span>
            </div>
            <div class="tag">
              <span>@Model.Value("mainTag2")</span>
            </div>
            <div class="tag">
              <span>@Model.Value("mainTag3")</span>
            </div>
          </div>
        </div>
      </div>

      <div class="side-bar">
        <h4>@Model.Value("sidebarHeading")</h4>
        <div class="tags">
          <div class="tag"><span>@Model.Value("tag1")</span></div>
          <div class="tag"><span>@Model.Value("tag2")</span></div>
          <div class="tag"><span>@Model.Value("tag3")</span></div>
          <div class="tag"><span>@Model.Value("tag4")</span></div>
          <div class="tag"><span>@Model.Value("tag5")</span></div>
          <div class="tag"><span>@Model.Value("tag6")</span></div>
          <div class="tag"><span>@Model.Value("tag7")</span></div>
          <div class="tag"><span>@Model.Value("tag8")</span></div>
        </div>

        <form class="contact-box">
          <h4>How can we help you?</h4>
          <p>Online support 24/7, we are here to help you</p>
          <div class="input-container">
            <input type="email" placeholder="E-mail address"></input>
            <img src="./images/Icon-mail.png"></img>
          </div>
      
        </form>
      </div>  

    </section>
    <section id="contact-details-section">
      <div class="container">
        <div class="img-container">
          <img class="img-vector" src="@contactInfoBackground"></img>
          <img class="img-person" src="@contactInfoImage"></img>
        </div>
        <div class="section-body">
          <h2>@Model.Value("contactInfoHeading")</h2>
          <div class="element-group">
            <img src="./images/Icon address.png"></img>
            <div class="text-group">
              <strong>@Model.Value("contactInfoAddressHeading")</strong>
              <p>@Model.Value("contactInfoAddress")</p>
            </div>
          </div>
          <div class="element-group">
            <img src="./images/Icon phone.png"></img>
            <div class="text-group">
              <strong>@Model.Value("contactInfoPhoneHeading")</strong>
              <p>@Model.Value("contactInfoPhone")</p>
            </div>
          </div>
          <div class="element-group">
            <img src="./images/Icon email.png"></img>
            <div class="text-group">
              <strong>@Model.Value("contactInfoEmailHeading")</strong>
              <p>@Model.Value("contactInfoEmail")</p>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

	<style>
	main {
  
  .atf {
  position: relative;
  padding: 6rem 0;
  background-color: var(--clr-gray-secondary);

  .earth-down {
    position: absolute;
    bottom: 0;
    left: 0;
  }
  .earth-up {
    position: absolute;
    top: 0;
    right: 0;
  }

  .atf-content {
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;

    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;

      a {
        color: var(--clr-text-primary);
        text-decoration: none;
        &:hover {
          text-decoration: underline;
        }
      }

      img {
        height: 10px;
      }

      > :nth-child(5) {
        color: var(--clr-beige-primary);
        text-decoration: none;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
  }
  #main-content-section {
    display: flex;
    gap: 3rem;

    .side-content {
      display: flex;
      flex-direction: column;
      padding-right: 3rem;
      border-right: 1px solid var(--clr-gray-secondary);
      gap: 2rem;
      max-width: 70%;

      .date-group {
        display: flex;
        align-items: center;

        img {
          width: 15px;
        }
        span {
          color: var(--clr-text-secondary);
        }
      }

      .img-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .text-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        h4 {
          font-weight: 600;
        }
      }

      .flex-group {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;

        img {
          display: block;
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      .tag-group {
        display: flex;
        gap: 1rem;
        align-items: center;

        .tags {
          display: flex;
          flex-wrap: wrap;
          gap: 1rem;

          .tag {
            padding: .7rem 1rem;
            border-radius: 20px;
            background-color: var(--clr-beige-secondary);
            transition: all 0.2s;
            cursor: pointer;

            &:hover {
              background-color: var(--clr-green);

              span {
                color: var(--clr-text-white);
              }            
            }
            
            span {
              display: block;
              text-align: center;
              padding: 0;
            }
          }
        }
      }
    }

    .side-bar {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      height: fit-content;

      h4 {
        font-size: 18pt;
      }
      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;

        .tag {
          padding: .7rem 1rem;
          border-radius: 20px;
          border: 1px solid var(--clr-gray-secondary);
          transition: all 0.2s;
          cursor: pointer;

          &:hover {
            background-color: var(--clr-green);

            span {
              color: var(--clr-text-white);
            }            
          }
          
          span {
            display: block;
            text-align: center;
            padding: 0;
          }
        }
      }
      

      .contact-box {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 1.5rem;
        background-color: var(--clr-green);
        
        h4 {
          color: var(--clr-beige-primary);
        }

        p {
          color: var(--clr-gray-secondary);
        }

        .input-container {
          position: relative;

          input {
          display: flex;
          background-color: var(--clr-bg-white);

          &:hover {
            border-color: black;
            }
          }  
          img {
              position: absolute;
              top: 10px;
              right: 15px;
              width: 30px;
              height: 30px;
              z-index: 2;
          }
        }
      }
    }

    

    
    
  }

  #contact-details-section {
  background-color: var(--clr-gray-secondary);

    .container {
      display: flex;

      .img-container {
        position: relative;
        width: 50%;

        .img-vector {
          position: absolute;
          bottom: 0;
          left: 0;
          z-index: 1;
        }
        .img-person {
          position: absolute;
          bottom: 0;
          left: 0;
          z-index: 1;
        }
      }
      .section-body {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        padding: 11rem 0;
        padding-left: 3rem;

        .element-group {
          display: flex;
          gap: 1rem;

          img {
            max-height: 25px;
          }
          .text-group {
            display: flex;
            flex-direction: column;
            gap: 1rem;

            strong {
              display: block;
            }
          }
        }
      }
    }
  }
}
	</style>