    }
  }

  .floating-box {
    position: absolute;
    top: -5rem;
    right: 0;
    display: flex;
    flex-direction: column;
    box-shadow: 0 0 10px 10px rgba(163, 163, 163, 0.25);
    width: 500px;

    .box-header {
      display: flex;
      align-items: center;
      padding: 2.2rem 2rem;
      background-color: var(--clr-bg-green);

      h3 {
        color: var(--clr-beige-secondary);
