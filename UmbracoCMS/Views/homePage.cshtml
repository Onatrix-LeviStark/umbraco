      font-size: var(--fs-small);
      font-style: italic;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      padding: 2.2rem 2rem;
      height: 100%;


      .select-wrapper {
        position: relative;
        user-select: none;
        width: 100%;

        .select {
          position: relative;
          display: flex;
          flex-direction: column;
          border: 1.5px solid;
          border-color: var(--clr-input-border);
          border-radius: 4px;
          padding: .3rem 0;

          &:focus {
            border-color: var(--clr-input-border-focus);
          }
          &:hover {
            border-color: var(--clr-input-border-hover);
          }

          .select__trigger {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-right: 22px;
            font-size: var(--fs-small);
            font-weight: 300;
            color: #3b3b3b;
            height: 40px;
            line-height: 40px;
            cursor: pointer;

            span {
              font-weight: 400;
              font-size: var(--fs-small);
            }

            .arrow {
              position: relative;
              height: 15px;
              width: 15px;
              transform: rotate(180deg);

              &::before, &::after {
                content: "";
                position: absolute;
                bottom: 3px;
                width: 0.12rem;
                height: 9px;
                transition: all 0.2s;
              }
              &::before {
                left: 5px;
                transform: rotate(45deg);
                background-color: var(--clr-green);
              }
              &::after {
                right: 2px;
                transform: rotate(-45deg);
                background-color: var(--clr-green);
              }
            }
          }

          .options {
            position: absolute;
            display: block;
            top: 100%;
            left: 0;
            right: 0;
            border: 1.5px solid;
            border-color: var(--clr-input-border);
            border-top: 0;
            background: #fff;
            transition: all 0.3s;
            opacity: 0;
            visibility: hidden;
            pointer-events: none;
            z-index: 2;

            .option {
              position: relative;
              display: block;
              padding: 0 22px 0 22px;
              font-size: var(--fs-small);
              font-weight: 300;
              color: #3b3b3b;
              line-height: 40px;
              cursor: pointer;
              transition: all 0.2s;
              opacity: 0;
              transform: translateY(-10px);

              &:hover {
                cursor: pointer;
                background-color: #b2b2b2;
              }
            }

            .option.selected {
              color: #ffffff;
              background-color: var(--clr-green);
            }
          }
        }

        .select.open .options {
          opacity: 1;
          visibility: visible;
          pointer-events: all;
        }

        .select.open .option {
          opacity: 1;
          transform: translateY(0);
        }

        .select.open .arrow::before {
          transform: rotate(-45deg);
        }
        .select.open .arrow::after {
          transform: rotate(45deg);
        }
      }
    }
  }
}

