@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model.Value("pageTitle");
  
  var backgroundImage = Model.Value<IPublishedContent>("heroBackgroundImage")?.Url() ?? "";
  var signatureImage = Model.Value<IPublishedContent>("aboutSectionSignatureImage")?.Url() ?? "";
  
  var trustedImageMain = Model.Value<IPublishedContent>("trustedImageMain")?.Url() ?? "";
  var trustedImageBackground = Model.Value<IPublishedContent>("trustedImageBackground")?.Url() ?? "";
  
  var successStoriesImage = Model.Value<IPublishedContent>("successStoriesImage")?.Url() ?? "";

  var ourServicesImage1 = Model.Value<IPublishedContent>("ourServicesImage1")?.Url() ?? "";
  var ourServicesImage2 = Model.Value<IPublishedContent>("ourServicesImage2")?.Url() ?? "";
  var ourServicesImage3 = Model.Value<IPublishedContent>("ourServicesImage3")?.Url() ?? "";
  var ourServicesImage4 = Model.Value<IPublishedContent>("ourServicesImage4")?.Url() ?? "";
  var ourServicesImage5 = Model.Value<IPublishedContent>("ourServicesImage5")?.Url() ?? "";
  var ourServicesImage6 = Model.Value<IPublishedContent>("ourServicesImage6")?.Url() ?? "";
  
  var ourProjects1Image = Model.Value<IPublishedContent>("ourProjectsProject1Image")?.Url() ?? "";
  var ourProjects2Image = Model.Value<IPublishedContent>("ourProjectsProject2Image")?.Url() ?? "";
  var ourProjects3Image = Model.Value<IPublishedContent>("ourProjectsProject3Image")?.Url() ?? "";
  var ourProjects4Image = Model.Value<IPublishedContent>("ourProjectsProject4Image")?.Url() ?? "";

  var brandsImage1 = Model.Value<IPublishedContent>("brandsImage1")?.Url() ?? "";
  var brandsImage2 = Model.Value<IPublishedContent>("brandsImage2")?.Url() ?? "";
  var brandsImage3 = Model.Value<IPublishedContent>("brandsImage3")?.Url() ?? "";
  var brandsImage4 = Model.Value<IPublishedContent>("brandsImage4")?.Url() ?? "";
  var brandsImage5 = Model.Value<IPublishedContent>("brandsImage5")?.Url() ?? "";
  var brandsImage6 = Model.Value<IPublishedContent>("brandsImage6")?.Url() ?? "";
}

<section id="hero-section">
    <img src="@backgroundImage" alt="Tina Fox, CEO & Founder"></img>
    <div class="container page-section">
      <div class="container-content">
        <h1>@Model.Value("heroHeading")</h1>
        <p>@Model.Value("heroText")</p>
        <a class="btn hero-button" href="@Model.Value("heroButtonUrl")">@Model.Value("heroButtonText")</a>
      </div>
    </div>
  </section>
  <section id="about-us-section" class="container page-section">
    <div class="container-content">
      <h3 class="section-title">@Model.Value("aboutSectionHeading")</h3>
      <h2>@Model.Value("aboutSectionSubHeading")</h2>
      <blockquote>@Model.Value("aboutSectionQuote")</blockquote>
      <p>@Model.Value("aboutSectionParagraph")</p>
      <img src="@signatureImage" alt="@Model.Value("aboutSectionSignatureImageText")"></img>
      <p>@Model.Value("aboutSectionSignatureImageText")</p>
    </div>
    <div class="floating-box">
      <div class="box-header">
        <h3>@Model.Value("aboutFormHeading")</h3>
      </div>
      <form>
        <p>@Model.Value("aboutFormParagraph")</p>
        <input type="text" placeholder="@Model.Value("aboutFormInput1Placeholder")"></input>
        <input type="email" placeholder="@Model.Value("aboutFormInput2Placeholder")"></input>
        <input type="number" placeholder="@Model.Value("aboutFormInput3Placeholder")"></input>
        <div class="select-wrapper">
          <div class="select">
            <div class="select__trigger"><span>@Model.Value("aboutFormSelectOption1")</span>
                <div class="arrow"></div>
            </div>
            <div class="options">
                <span class="option selected" data-value="@Model.Value("aboutFormSelectOption1")">@Model.Value("aboutFormSelectOption1")</span>
                <span class="option" data-value="@Model.Value("aboutFormSelectOption2")">@Model.Value("aboutFormSelectOption2")</span>
                <span class="option" data-value="@Model.Value("aboutFormSelectOption3")">@Model.Value("aboutFormSelectOption3")</span>
            </div>
          </div>
        </div>
        <button type="submit" class="btn-beige">@Model.Value("aboutFormButtonText")</button>
      </form>
    </div>
  </section>
  <section id="our-services-section">
    <div class="container page-section">
      <h3>@Model.Value("ourServicesSectionHeading")</h3>
      <h2>@Model.Value("ourServicesSectionSubheading")</h2>
      <div class="grid-container">
        <div class="card">
          <h4 class="card-heading">@Model.Value("ourServicesService1Heading")</h4>
          <div class="card-image">
            <img src="@ourServicesImage1"></img>            
          </div>
          <p class="card-body">@Model.Value("ourServicesService1Paragraph")</p>
        </div>
        <div class="card">
          <h4 class="card-heading">@Model.Value("ourServicesService2Heading")</h4>
          <div class="card-image">
            <img src="@ourServicesImage2"></img>            
          </div>
          <p class="card-body">@Model.Value("ourServicesService2Paragraph")</p>
        </div>
        <div class="card">
          <h4 class="card-heading">@Model.Value("ourServicesService3Heading")</h4>
          <div class="card-image">
            <img src="@ourServicesImage3"></img>            
          </div>
          <p class="card-body">@Model.Value("ourServicesService3Paragraph")</p>
        </div>
        <div class="card">
          <h4 class="card-heading">@Model.Value("ourServicesService4Heading")</h4>
          <div class="card-image">
            <img src="@ourServicesImage4"></img>            
          </div>
          <p class="card-body">@Model.Value("ourServicesService4Paragraph")</p>
        </div>
        <div class="card">
          <h4 class="card-heading">@Model.Value("ourServicesService5Heading")</h4>
          <div class="card-image">
            <img src="@ourServicesImage5"></img>            
          </div>
          <p class="card-body">@Model.Value("ourServicesService5Paragraph")</p>
        </div>
        <div class="card">
          <h4 class="card-heading">@Model.Value("ourServicesService6Heading")</h4>
