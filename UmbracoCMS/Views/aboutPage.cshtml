@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model.Value("pageTitle");

  var mainSideImage = Model.Value<IPublishedContent>("mainSideImage")?.Url() ?? "";
  var reviewSideImage = Model.Value<IPublishedContent>("reviewSideImage")?.Url() ?? "";

  var expertImage1 = Model.Value<IPublishedContent>("expertImage1")?.Url() ?? "";
  var expertImage2 = Model.Value<IPublishedContent>("expertImage2")?.Url() ?? "";
  var expertImage3 = Model.Value<IPublishedContent>("expertImage3")?.Url() ?? "";
  var expertImage4 = Model.Value<IPublishedContent>("expertImage4")?.Url() ?? "";
  var expertImage5 = Model.Value<IPublishedContent>("expertImage5")?.Url() ?? "";
  var expertImage6 = Model.Value<IPublishedContent>("expertImage6")?.Url() ?? "";
  var expertImage7 = Model.Value<IPublishedContent>("expertImage7")?.Url() ?? "";
  
  var contactInfoImage = Model.Value<IPublishedContent>("contactInfoImage")?.Url() ?? "";
  var contactInfoBackground = Model.Value<IPublishedContent>("contactInfoBackground")?.Url() ?? "";
  
}

<section class="atf">
    <img src="./images/earth-down.png" class="earth-down"></img>
    <img src="./images/earth-up.png" class="earth-up"></img>

    <div class="atf-content">
      <h1>@Model.Value("atfHeading")</h1>
      <nav class="breadcrumb-nav">
        <a href="@Model.Value("breadcrumbLink1Url")">@Model.Value("breadcrumbLink1Text")</a>
        <img src="./images/Arrow-Vector-Black.svg"></img>
        <a href="@Model.Value("breadcrumbLink2Url")">@Model.Value("breadcrumbLink2Text")</a>
      </nav>
    </div>
    
  </section>

  <section id="about-us-section" class="page-section">
    <div class="container">
      <div class="img-container">
        <img src="@mainSideImage"></img>
        <p>@Model.Value("mainSideImageText")</p>
      </div>
      <div class="text-container">
        <blockquote>@Model.Value("mainQuote")</blockquote>
        <p>@Model.Value("mainParagraph1")</p>
        <p>@Model.Value("mainParagraph2")</p>
        <p>@Model.Value("mainParagraph3")</p>
        <p>@Model.Value("mainParagraph4")</p>
        <p>@Model.Value("mainParagraph5")</p>
        <p>@Model.Value("mainParagraph6")</p>
        <p>@Model.Value("mainParagraph7")</p>
      </div>
    </div>
  </section>

  <section id="review-section" class="page-section">
    <div class="container">
      <div class="section-heading">
        <h3>@Model.Value("reviewHeading")</h3>
        <h2>@Model.Value("reviewSubheading")</h2>
      </div>
      <div class="section-body">
        <p>@Model.Value("reviewQuote")</p>
        <img src="./images/Rating.png" class="rating-img"></img>
      </div>
      <div class="section-footer">
        <p>@Model.Value("reviewName")</p>
        <p class="rating-company">@Model.Value("reviewCompany")</p>
      </div>
    </div>
    <div class="img-container">
      <img src="@reviewSideImage"></img>
    </div>
  </section>

  <section id="our-experts-section" class="page-section container">
    <div class="section-heading">
      <h3>@Model.Value("expertsHeading")</h3>
      <h2>@Model.Value("expertsSubheading")</h2>
    </div>
    <div class="experts-grid">
      <div class="expert-card">
        <img class="card-img" src="@expertImage1"></img>
        <div class="card-body">
          <h4>@Model.Value("expertName1")</h4>
          <p>@Model.Value("expertRole1")</p>
        </div>
      </div>
      <div class="expert-card">
        <img class="card-img" src="@expertImage2"></img>
        <div class="card-body">
          <h4>@Model.Value("expertName2")</h4>
          <p>@Model.Value("expertRole2")</p>
        </div>
      </div>
      <div class="expert-card">
        <img class="card-img" src="@expertImage3"></img>
        <div class="card-body">
          <h4>@Model.Value("expertName3")</h4>
          <p>@Model.Value("expertRole3")</p>
        </div>
      </div>
      <div class="expert-card">
        <img class="card-img" src="@expertImage4"></img>
        <div class="card-body">
          <h4>@Model.Value("expertName4")</h4>
          <p>@Model.Value("expertRole4")</p>
        </div>
      </div>
      <div class="expert-card">
        <img class="card-img" src="@expertImage5"></img>
        <div class="card-body"
          <h4>@Model.Value("expertName5")</h4>
          <p> @Model.Value("expertRole5")</p>
        </div>
      </div>
      <div class="expert-card">
        <img class="card-img" src="@expertImage6"></img>
        <div class="card-body">
          <h4>@Model.Value("expertName6")</h4>
          <p>@Model.Value("expertRole6")</p>
        </div>
      </div>
      <div class="expert-card">
        <img class="card-img" src="@expertImage7"></img>
        <div class="card-body">
          <h4>@Model.Value("expertName7")</h4>
          <p>@Model.Value("expertRole7")</p>
        </div>
      </div>
    </div>
  </section>

  <section id="contact-details-section">
    <div class="container">
      <div class="img-container">
        <img class="img-vector" src="@contactInfoBackground"></img>
        <img class="img-person" src="@contactInfoImage"></img>
      </div>
      <div class="section-body">
        <h2>@Model.Value("contactInfoHeading")</h2>
        <div class="element-group">
          <img src="./images/Icon address.png"></img>
          <div class="text-group">
            <strong>@Model.Value("contactInfoAddressHeading")</strong>
            <p>@Model.Value("contactInfoAddress")</p>
          </div>
        </div>
        <div class="element-group">
          <img src="./images/Icon phone.png"></img>
          <div class="text-group">
            <strong>@Model.Value("contactInfoPhoneHeading")</strong>
            <p>@Model.Value("contactInfoPhone")</p>
          </div>
        </div>
        <div class="element-group">
          <img src="./images/Icon email.png"></img>
          <div class="text-group">
            <strong>@Model.Value("contactInfoEmailHeading")</strong>
            <p>@Model.Value("contactInfoEmail")</p>
          </div>
        </div>
      </div>
    </div>
  </section>

	<style>

.atf {
  position: relative;
  padding: 6rem 0;
  background-color: var(--clr-gray-secondary);

  .earth-down {
    position: absolute;
    bottom: 0;
    left: 0;
  }
  .earth-up {
    position: absolute;
    top: 0;
    right: 0;
  }

  .atf-content {
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;

    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;

      > :nth-child(1) {
        color: var(--clr-text-primary);
        text-decoration: none;
        &:hover {
          text-decoration: underline;
        }
      }

      img {
        height: 10px;
      }

      > :nth-child(3) {
        color: var(--clr-beige-primary);
        text-decoration: none;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
}

#about-us-section {
  .container {
    display: flex;
    gap: 4rem;
    .img-container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .text-container {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;

      blockquote {
        font-size: 16pt;
        font-style: italic;
        font-weight: 300;
      }
    }
  }
}

#review-section {
  position: relative;
  background-color: var(--clr-gray-secondary);
  
  .container {
    display: flex;
    flex-direction: column;
    gap: 2rem;

    div {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .section-heading {
      max-width: 540px;
    }
    .section-body {
      max-width: 540px;

      p {
        font-size: 16pt;
        font-style: italic;
        font-weight: 300;
        color: var(--clr-text-secondary);
        
      }
      img {
        width: 100px;
      }
    }
    .section-footer {
      .rating-company {
        margin-top: -10px;
        font-size: 16pt;
        font-style: italic;
      }
    }
  }
  .img-container {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    width: 50vw;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
}

#our-experts-section {
  flex-direction: column;
  gap: 3rem;

  .section-heading {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .experts-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 2rem;

    .expert-card {    
      .card-img {
        height: auto;
        width: 100%;
        object-fit: cover;
      }
      .card-body {
        padding: 1rem;
      }
    }
  }
}

#contact-details-section {
  background-color: var(--clr-gray-secondary);
  .container {
    display: flex;

    .img-container {
      position: relative;
      width: 50%;

      .img-vector {
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 1;
      }
      .img-person {
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 1;
      }
    }
    .section-body {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      padding: 11rem 0;
      padding-left: 3rem;

      .element-group {
        display: flex;
        gap: 1rem;

        img {
          max-height: 25px;
        }
        .text-group {
          display: flex;
          flex-direction: column;
          gap: 1rem;

          strong {
            display: block;
          }
          p {

          }
        }
      }
    }
  }
}
</style>